<Window x:Class="MyMagicCollection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Magic Collection" Height="350" Width="525">
    <Grid>
        <TabControl>
            <TabItem Header="Tools" DataContext="{Binding DeckTools}">
                <Grid>
                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <Button Click="OnOpenDeckFile">Read .dec file</Button>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding CurrentCards}" />

                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding IsFoil}" >Is Foil</CheckBox>
                        <ComboBox SelectedItem="{Binding Language}" ItemsSource="{Binding AvailableLanguages}"/>
                        <Button Click="OnSaveDeckboxCsv">Save Deckbox.org CSV</Button>
                        <Button Margin="20,0,0,0" Click="OnLoadPriceDataTools">Load/Update Price Data</Button>
                    </StackPanel>
                    
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
